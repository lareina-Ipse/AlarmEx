<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TimePicker
            android:id="@+id/timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="clock"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/repeat"/>
        <TextView
            android:id="@+id/textview_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매주 월, 화, 수, 목, 금"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button_sun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/sun"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_mon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/mon"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_tue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/tue"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_wed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/wed"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_thu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/thu"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_fri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/fri"
                android:layout_marginRight="5dp"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/button_sat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/sat"
                android:shadowColor="@color/colorWhite"
                android:background="@drawable/button_selector"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/cancel"/>
        <Button
            android:id="@+id/button_save"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/save"/>

    </LinearLayout>

</LinearLayout>